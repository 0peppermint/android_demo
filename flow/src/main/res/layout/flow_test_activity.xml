<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/btn_test_flow_client"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/flow_start_flow_client"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="接收到flow的值为："
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_collect_data"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_test_add_flow_collect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/flow_add_flow_collect"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_test_emit_flow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/flow_emit_flow"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试单线程Flow"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/btn_test_single_executor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="测试单线程Flow"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>